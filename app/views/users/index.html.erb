<h1>Listing all Users</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>E-mail</th>
        <th>Lab</th>
        <th>Admin Abilities</th>
        <th>IA Abilities</th>
        <th>IT Abilities</th>
        <th>Customer Abilities</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <% if current_user.admin? || current_user.id == user.id %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.lab.name if user.lab %></td>
            <td><%= user.admin %></td>
            <td><%= user.ia_admin %></td>
            <td><%= user.it_admin %></td>
            <td><%= user.customer %></td>
            <% if !(current_user.admin? && current_user.id == user.id)  %>
              <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success' %></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
