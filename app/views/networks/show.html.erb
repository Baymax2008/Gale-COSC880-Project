<h1>
  <%= @network.classification %>
</h1>

<p>
  <strong>PoC Name:</strong>
  <%= @network.pocName %>
</p>

<p>
  <strong>PoC Number:</strong>
  <%= @network.pocNumber %>
</p>

<p>
  <strong>Experation Date:</strong>
  <%= @network.experationDate %>
</p>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Test Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Approved</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% @tests.each do |test| %>
            <tr>
              <td><%= test.name %></td>
              <td><%= test.start_date %></td>
              <td><%= test.end_date %></td>
              <td><%= test.test_approval.approved %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to 'Edit', edit_network_path(@network) %> |
<%= link_to 'Back', networks_path %>
