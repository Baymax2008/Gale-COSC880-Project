<div class="row">
  <%= form_for@network, html: { class: 'form-horizontal'} do |f| %>
    <% if @network.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@network.errors.count, "error") %> prohibited this network from being saved:</h2>

        <ul>
        <% @network.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :classification, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :classification %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :pocName, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :pocName %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :pocNumber, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :pocNumber %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :experationDate, class: 'control-label' %>
      <div class="controls">
        <%= f.date_select :experationDate %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>